# ===================================
# AgentStock Configuration
# ===================================
# Copy this file to .env and customize the values
# Never commit .env to version control!

# ===================================
# LLM Configuration
# ===================================
# Base URL for Ollama API
LLM_BASE_URL=http://localhost:11434

# Model name to use (must be pulled via: ollama pull <model>)
# Options: llama3.1:8b, llama3.1:70b, mistral, etc.
LLM_MODEL_NAME=llama3.1:8b

# Timeout for LLM requests in seconds (increase for slower models)
LLM_TIMEOUT=120

# ===================================
# Application Settings
# ===================================
# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (more verbose logging)
DEBUG=True

# ===================================
# CORS Configuration
# ===================================
# Comma-separated list of allowed origins
# For development, use localhost
# For production, add your actual domain
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ===================================
# Stock Data Configuration
# ===================================
# Default period for price history
# Options: 1d, 5d, 1mo, 3mo, 6mo, 1y, 2y, 5y, 10y, ytd, max
PRICE_HISTORY_PERIOD=1mo

# Number of news articles to fetch per ticker
NEWS_LIMIT=5

# ===================================
# Optional: Premium News API
# ===================================
# If you want to use NewsAPI.org instead of Google News RSS
# Get your key at: https://newsapi.org/
# NEWS_API_KEY=your_api_key_here